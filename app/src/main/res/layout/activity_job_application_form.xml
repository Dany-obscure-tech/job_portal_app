<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_2"
    android:layout_height="match_parent"
    tools:context=".JobApplicationForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                android:id="@+id/applicationFormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp" />

            <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_name" />

            <EditText
                android:id="@+id/ApplicationFormName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#707070"
                android:hint="@string/name"
                android:maxLength="32"
                android:textColorHint="#9F9F9F" />

            <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_contactno" />

            <EditText
                android:inputType="phone"
                android:maxLength="11"
                android:id="@+id/ApplicationFormcontactNo"
                android:textColorHint="#9F9F9F"
                android:hint="@string/contact_no"
                android:backgroundTint="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_email" />

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/ApplicationEmail"
                android:textColorHint="#9F9F9F"
                android:hint="@string/email"
                android:backgroundTint="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_description" />

            <EditText
                android:id="@+id/ApplicationFormDescription"
                android:textColorHint="#9F9F9F"
                android:hint="@string/description"
                android:backgroundTint="#707070"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_gravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/applicationFormSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:padding="0dp"
                    app:srcCompat="@drawable/submit_button" />

                <com.daniyalfarid.jobportal.Fonts.SegoeUIBold
                    android:id="@+id/applicationFormButtonText"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>